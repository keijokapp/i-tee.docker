#!/bin/bash

set -e

# run master SSH client instance on background to speed
# up SSH commands using SSH connection multiplexing
while true
do
	ssh vbox@host.local -N
	sleep 1 # just in case
done &


cd /var/www/i-tee

rake db:migrate RAILS_ENV=production 2>&1

exec /usr/local/bundle/bin/passenger start -p 80 -e production --log-file /dev/stderr


